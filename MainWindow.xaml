<Window x:Class="ADHDPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADHDPlanner"
        xmlns:userControls="clr-namespace:ADHDPlanner.View.UserControls"
        mc:Ignorable="d"
        Title="ADHD Planner" Height="450" Width="800"
        WindowState="Maximized">
    <Window.Resources>
        <Style TargetType="ListViewItem" >
            <Setter Property="MinWidth" Value="350"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        
        <TabControl>
            <TabItem Header="All" FontSize="20" FontFamily="Courier">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <ListView Background="AliceBlue" ItemsSource="{Binding Tasks}" Name="taskView"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              ScrollViewer.VerticalScrollBarVisibility="Hidden" SelectionChanged="taskView_SelectionChanged">
                    </ListView>

                    <userControls:Workspace Grid.Column="1" x:Name="workspace"/>

                </Grid>
            </TabItem>
            
            <TabItem Header="Add task" FontSize="20"/>
            <TabItem Header="Eisenhower matrix" FontSize="20"></TabItem>
            
            <TabItem Header="Pomodoro" FontSize="20"></TabItem>
        </TabControl>

        <TextBlock Grid.Row="1" Text="7 / 11" HorizontalAlignment="Right" FontSize="15" Margin="0, 0, 10, 0"/>
    </Grid>
</Window>
