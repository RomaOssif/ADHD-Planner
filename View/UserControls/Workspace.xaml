<UserControl x:Class="ADHDPlanner.View.UserControls.Workspace"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ADHDPlanner.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="DimGray" BorderThickness="0, 0, 0, 0">
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <!--looks too ugly for now :( -->
                <!--<Image Source="C:\Temp Test Folder\5525518.png" Stretch="Uniform" Panel.ZIndex="-1"/>-->

                <Button FontSize="40" FontWeight="DemiBold" FontFamily="Coilare" Click="Delete_Click"
                        Content="X" Style="{StaticResource ButtonCancelFancyUI}"/>

                <TextBox Grid.Column="1" FontSize="26" Margin="2" HorizontalAlignment="Center" MinWidth="100" Text="{Binding Title}"
                       TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Hidden" 
                       FontFamily="Coilare" Name="Title" CaretBrush="#DDDDDD" SelectionBrush="CadetBlue"
                       FontWeight="DemiBold" Opacity="0.9" Background="Transparent" BorderThickness="0" Foreground="#DDDDDD"/>

                <Button Grid.Column="2" FontWeight="DemiBold" Content="Define" Name="btnUpdate" FontFamily="Coilare"
                        Click="btnUpdate_Click" Style="{StaticResource ButtonFancyUI}"/>
            </Grid>

            <Grid Grid.Row="1" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60*"/>
                    <ColumnDefinition Width="40*"/>
                </Grid.ColumnDefinitions>

                <TextBox Text="{Binding Description}" Margin="0, 2, 0, 0" Name="descriptionTBox" BorderThickness="0, 1, 2, 0"
                     Background="Transparent" Style="{StaticResource TextBoxNotes}"/>
                <TextBox Grid.Column="1" Text="{Binding OrderedDescription}" Name="listTBox" BorderThickness="2, 1, 0, 0"
                     Margin="5, 2, 0, 0" Background="Transparent" Style="{StaticResource TextBoxNotes}"/>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>

                <Border BorderBrush="Gray" BorderThickness="1.5" Opacity="0.85">
                    <TextBox Text="{Binding EstimatedTime}" Background="Transparent" FontSize="20"
                             FontWeight="Regular" Name="timeTB" FontFamily="Coilare" Margin="5, 2, 0, 0"
                             BorderThickness="0" SelectionBrush="CadetBlue" Foreground="#BBBBBB" CaretBrush="#BBBBBB"/>
                </Border>

                <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1.5">
                    <ComboBox Grid.Column="1" FontSize="20" FontWeight="DemiBold" Name="stateCB"
                          FontFamily="Coilare" Margin="0, 0, 1, 0" Background="Transparent"
                          HorizontalContentAlignment="Center" BorderThickness="0">
                        <ComboBoxItem Content="Important urgent" />
                        <ComboBoxItem Content="Important not urgent" />
                        <ComboBoxItem Content="Not important urgent" />
                        <ComboBoxItem Content="Not important not urgent" IsSelected="True"/>
                    </ComboBox>
                </Border>

                <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1.5">
                    <ComboBox FontSize="18" FontWeight="SemiBold" FontFamily="Coilare" Name="stageCB" >
                        <ComboBoxItem Content="Undefined" IsSelected="True"/>
                        <ComboBoxItem Content="Defined"/>
                        <ComboBoxItem Content="Finished"/>
                    </ComboBox>

                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
