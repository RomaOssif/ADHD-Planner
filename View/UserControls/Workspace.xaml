<UserControl x:Class="ADHDPlanner.View.UserControls.Workspace"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ADHDPlanner.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#DFFFB3">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <Button Content="X" FontSize="40" FontWeight="DemiBold" Background="IndianRed" Opacity="0.9" FontFamily="Coilare"/>

            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1.5">
                    <TextBox FontSize="26" Margin="2" HorizontalAlignment="Center" MinWidth="300" Text="Name..."
                       TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Hidden" FontFamily="Coilare" Name="Title"
                       FontWeight="DemiBold" Opacity="0.9" Background="Transparent" BorderThickness="0"/>
            </Border>
            
            <Button Grid.Column="2" FontSize="35" FontWeight="DemiBold" Background="LightGreen" FontFamily="Coilare"
                    Opacity="0.95" Content="Define" Name="btnUpdate"/>
        </Grid>

        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60*"/>
                <ColumnDefinition Width="40*"/>
            </Grid.ColumnDefinitions>

            <TextBox Text="Text here :)"  Margin="5, 2, 0, 0" Name="descriptionTBox"
                     FontWeight="Regular" FontFamily="Coilare" TextWrapping="Wrap" FontSize="20"/>
            <TextBox Grid.Column="1" Text="Second space for typing. . ." TextWrapping="Wrap"
                     FontSize="20" Name="listTBox" FontWeight="Regular" FontFamily="Coilare" Margin="5, 2, 0, 0"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <Border BorderBrush="Gray" BorderThickness="1.5" Opacity="0.85">
                <TextBox Text="hh:mm:ss" Background="Transparent" FontSize="20" FontWeight="Regular" Name="timeTB"
                           FontFamily="Coilare" Margin="5, 2, 0, 0" BorderThickness="0"/>
            </Border>

            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1.5">
                <!--<TextBlock Text="Important urgent" FontSize="20" FontWeight="DemiBold" Name="stateTB"
                           FontFamily="Coilare" Margin="5, 2, 0, 0" TextAlignment="Center"/>-->
                <ComboBox Grid.Column="1" Text="Important urgent" FontSize="20" FontWeight="DemiBold" Name="stateCB"
                          FontFamily="Coilare" Margin="0, 0, 1, 0" Background="Transparent"
                          HorizontalContentAlignment="Center" BorderThickness="0">
                    <ComboBoxItem Content="Important urgent" />
                    <ComboBoxItem Content="Important not urgent" />
                    <ComboBoxItem Content="Not important urgent" />
                    <ComboBoxItem Content="Not important not urgent" IsSelected="True"/>
                </ComboBox>
            </Border>

            <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1.5">
                <ComboBox FontSize="18" FontWeight="SemiBold" FontFamily="Coilare" Name="stageCB" >
                    <ComboBoxItem Content="Undefined" IsSelected="True"/>
                    <ComboBoxItem Content="Defined"/>
                    <ComboBoxItem Content="Finished"/>
                </ComboBox>

            </Border>
        </Grid>
    </Grid>
</UserControl>
